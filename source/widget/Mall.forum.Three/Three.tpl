<script type="text/javascript">
    //监听滚动条
    $(window).scroll(function(){
        if(window.scrollY > $(".forum-comment").offset().top - window.innerHeight){
            $(".article-toolbar-fixed").hide();
            $(".article-toolbar-fixed .share-div").removeClass("share-div-show");
        }else {
            $(".article-toolbar-fixed").show();
            $(".article-toolbar-bottom .share-div").removeClass("share-div-show");
        }
    });
    //定位到留言模块
    $(".leaving-message").click(function () {
        window.scrollTo(0,$(".forum-comment").offset().top)
    })
    //分享显示隐藏
    $(".share").mouseenter(function () {
        $(this).children(".share-div").addClass("share-div-show")
    })
    $(".share-div").mouseleave(function () {
        $(this).removeClass("share-div-show")
    })

    $(".forum-delete").click(function () {
        $('#myModal').modal('hide')
    })
</script>